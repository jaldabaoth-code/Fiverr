<div id="carouselDark" class="carousel carousel-dark slide" data-bs-ride="carousel">
    <div class="carousel-inner" role="listbox">
         {% for question in questions %}
            <div class="carousel-item {{ loop.index == 1 ? 'active' : '' }}">
                <div class="card">
                    <img class="card-img-top" src="{{ question.picture }}" alt="Card image cap">
                    <div class="card-body d-flex flex-column justify-content-between">
                        <div>
                            <h2 class="card-title h5">{{ question.author.username }}</h5>
                            <p class="card-text">{{ question.content }}</p>
                        </div>
                        <div class="mb-4 d-flex flex-column">
                            <a href="#" class="buttonQuestionHelp col-12 text-center py-3 mt-4 border border-success rounded text-decoration-none">I can help !</a>
                        </div>
                    </div>
                </div>
            </div>
        {% endfor %} 
    </div>
    <button class="carousel-control-prev" type="button" data-bs-target="#carouselDark" data-bs-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Previous</span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#carouselDark" data-bs-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Next</span>
    </button>
</div>
